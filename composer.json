{
    "name": "pen-y-fan/stranding",
    "type": "project",
    "description": "Death Stranding progress tracker.",
    "keywords": [
        "Death stranding",
        "progress"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "filament/filament": "3.0-stable",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^10.10",
        "laravel/sanctum": "^3.2",
        "laravel/tinker": "^2.8"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.9",
        "barryvdh/laravel-ide-helper": "^2.13",
        "driftingly/rector-laravel": "^0.24.1",
        "fakerphp/faker": "^1.9.1",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.18",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^7.0",
        "nunomaduro/larastan": "^2.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpro/grumphp-shim": "^2.0",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^10.1",
        "rector/rector": "^0.18.0",
        "roave/security-advisories": "dev-latest",
        "spatie/laravel-ignition": "^2.0",
        "symplify/easy-coding-standard": "^12.0",
        "symplify/phpstan-extensions": "^11.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --fix --ansi",
        "grum": "grumphp run --ansi",
        "ide": "@php artisan ide-helper:models -W",
        "lint": "parallel-lint --exclude .git --exclude node_modules --exclude storage --exclude vendor .",
        "phpstan": "phpstan analyse --error-format symplify --ansi",
        "phpstan-baseline": "phpstan analyse --generate-baseline",
        "rector": "rector --ansi",
        "rector-dr": "rector --dry-run --ansi",
        "tests": "phpunit",
        "all": [
            "@check-cs",
            "@phpstan",
            "@tests",
            "@lint",
            "@rector-dr"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "phpro/grumphp-shim": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
